    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Aktuelle Datei",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "-m",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Python: Test debug config",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "justMyCode": false,
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceRoot}",
                "PYTEST_ADDOPTS": "--no-cov"
            },
            "purpose": [
                "debug-test"
            ],
        },
    ]
}