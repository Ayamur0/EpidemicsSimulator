QDialog {
    border: none;
    background: rgb(100, 100, 100);
    border-radius: 5px;
}
QDialog QWidget{
    border: none;
    background: rgb(80, 80, 80);
}
QDialog QPushButton{
    border: 1px;
    color: white;
    background: rgb(60, 60, 60);
    border-radius: 10px;
    min-width: 100px;
    min-height: 30px;
}
QDialog QPushButton:hover {
    background: rgb(90, 90, 90);
}
QCheckBox{
    padding: 0px;
    spacing: 0px;
}
QCheckBox::indicator:checked {
    image: url(assets:selected.png);
    width: 24px;
    height: 24px;
}
QCheckBox::indicator:unchecked {
    image: url(assets:unselect.png);
    width: 24px;
    height: 24px;
}
